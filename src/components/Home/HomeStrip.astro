<script>
    const scrollingContent = document.getElementById('scrolling-content');
    const contentWidth = scrollingContent.scrollWidth;

    // Clone the content to create the endless effect
    scrollingContent.innerHTML += scrollingContent.innerHTML;

    let scrollPosition = 0;
    const scrollSpeed = 0.15; // Adjust speed here (lower = slower)

    function scrollContent() {
        scrollPosition -= scrollSpeed;
        if (scrollPosition <= -contentWidth) {
            scrollPosition = 0; // Reset to start seamlessly
        }
        scrollingContent.style.transform = `translateX(${scrollPosition}px)`;
        requestAnimationFrame(scrollContent);
    }

    scrollContent();
</script>
